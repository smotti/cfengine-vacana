body common control
{
  inputs => {
    "../masterfiles/lib/3.6/stdlib.cf",
    "../masterfiles/lib/vacana/common.cf",
  };
  bundlesequence => { "stdlib_common", "va_c", "run_test" };
}

body file control
{
  inputs => {
    "@{stdlib_common.inputs}",
    "@{va_c.inputs}",
    "@{va_c.test_inputs}" };
}

bundle agent run_test
{
  meta:
    
    "purpose" string => "Standalone bundle to test va_file_copy_local";
    "tags"     slist => { "test", "test_files", "vacana" };

  vars:
    
    "test_file"
      comment => "A test file to copy",
      string  => "${this.promise_dirname}/test_copy.txt";

  methods:
    
    "test_va_file_copy_local"
      comment    => "Run the testing bundle test_va_file_copy_local",
      usebundle  => test_va_file_copy_local("${test_file}");
}
